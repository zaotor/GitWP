        	<Rectangle x:Name="ray2" Fill="White" HorizontalAlignment="Left" Height="2" Margin="270,206,0,0" Stroke="White" StrokeThickness="2" VerticalAlignment="Top" Width="100"/>
        	<TextBox x:Name="TB_id" HorizontalAlignment="Left" Margin="30,310,0,0" TextWrapping="Wrap" Text="bonjour@linkat.com" VerticalAlignment="Top" Width="320" Height="34" FontSize="18.667"/>
