        <Grid HorizontalAlignment="Left" Height="570" VerticalAlignment="Top" Width="380" Margin="10,60,0,0">
            <Button x:Name="BTN_login_facebook" Content="Facebook" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Margin="70,30,0,0" Background="#FF4F566A" Height="72" Click="BTN_login_facebook_Click"/>
            <Button x:Name="BTN_login_linkedin" Content="Linkedin" HorizontalAlignment="Left" Margin="70,104,0,0" VerticalAlignment="Top" Width="240" Background="#FF935C5C" Height="72" Click="BTN_login_linkedin_Click_1"/>
