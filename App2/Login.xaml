        	<Button x:Name="BTN_login" Content="Se connecter" HorizontalAlignment="Left" Margin="70,512,0,0" VerticalAlignment="Top" Width="240" Background="#FF0F9DE8" Click="BTN_login_Click"/>
        </Grid>
	</Grid>
